{
  "name": "app-ideas",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run hmr",
    "serve": "ng serve",
    "hmr": "npm run serve -- --configuration hmr",
    "build": "ng build --prod",
    "build:deploy": "npm run build -- --base-href=\"/app-ideas/\"",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "test:ci": "ng test --runInBand",
    "lint:base": "eslint \"**/*.{js,ts}\"",
    "lint": "npm run lint:base -- --fix",
    "lint:ci": "npm run lint:base -- --quiet",
    "e2e": "ng e2e",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "generate-index-files": "./scripts/generate-all-indexes-ts-.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.5",
    "@angular/cdk": "^9.2.1",
    "@angular/common": "~9.0.5",
    "@angular/compiler": "~9.0.5",
    "@angular/core": "~9.0.5",
    "@angular/forms": "~9.0.5",
    "@angular/material": "^9.2.1",
    "@angular/platform-browser": "~9.0.5",
    "@angular/platform-browser-dynamic": "~9.0.5",
    "@angular/router": "~9.0.5",
    "ngx-markdown": "^9.0.0",
    "ramda": "^0.27.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^9.0.1",
    "@angular-devkit/build-angular": "~0.900.5",
    "@angular/cli": "~9.0.5",
    "@angular/compiler-cli": "~9.0.5",
    "@angular/language-service": "~9.0.5",
    "@angularclass/hmr": "^2.1.3",
    "@ngneat/spectator": "^5.6.1",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/ramda": "^0.27.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "angular-cli-ghpages": "^0.6.2",
    "codelyzer": "^5.1.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^25.5.2",
    "jest-preset-angular": "^8.1.3",
    "ng-mocks": "^9.2.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.7.5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/app/**/{!(*.module|index),}.ts"
    ],
    "moduleNameMapper": {
      "^@kaeh/(.*)$": "<rootDir>/src/app/$1"
    }
  }
}
